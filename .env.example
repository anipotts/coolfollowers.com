# Environment Variables
# Copy this file to .env.local for local development

# =============================================================================
# REQUIRED - Site Protection
# =============================================================================

# Password to access the dashboard (any string you choose)
SITE_PASSWORD=your-secret-password

# =============================================================================
# REQUIRED - Instagram Configuration
# =============================================================================

# Your Instagram username
IG_USERNAME=your_instagram_username

# Base64-encoded Instagram session file
# Generate with: base64 -i ~/.config/instaloader/session-YOUR_USERNAME
# See README.md for full setup instructions
IG_SESSION_DATA=base64-encoded-session-data-here

# =============================================================================
# REQUIRED - Vercel KV (Redis)
# =============================================================================

# These are automatically set when you link Vercel KV to your project
# via the Vercel dashboard. For local development, copy from Vercel dashboard.
KV_REST_API_URL=https://your-kv.kv.vercel-storage.com
KV_REST_API_TOKEN=your-kv-token

# =============================================================================
# OPTIONAL - Rate Limiting & Caching
# =============================================================================

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL_SECONDS=3600

# Maximum posts to fetch per refresh (default: 50)
MAX_POSTS=50

# Maximum likers to fetch per post (default: 50)
MAX_LIKERS_PER_POST=50

# Maximum comments to fetch per post (default: 50)
MAX_COMMENTS_PER_POST=50

# Maximum followers/following to fetch (default: 1000)
MAX_FOLLOWERS=1000

# =============================================================================
# OPTIONAL - Site Configuration
# =============================================================================

# Your site URL (for Open Graph, etc.)
NEXT_PUBLIC_SITE_URL=https://coolfollowers.com
